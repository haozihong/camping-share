<% pageTitle = "Edit Comment" %>

<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align: center;">
		Edit Comment
	</h1>
	<form class="small-form" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
		<div class="form-group">
			<textarea class="form-control" name="comment[text]" rows=7><%= comment.text %></textarea>
		</div>
		<div class="form-group">
			<button class="btn btn-md btn-primary btn-block">Edit</button>	
		</div>
	</form>
	<a href="/campgrounds/<%= campground_id %>">Go Back</a>
</div>

<%- include("../partials/footer") %>