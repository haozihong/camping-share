<% pageTitle = "Add New Comment" %>

<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align: center;">
		Add a New Comment to <%= campground.name %>
	</h1>
	<form class="small-form" action="/campgrounds/<%= campground._id %>/comments" method="post">
		<div class="form-group">
			<textarea class="form-control" name="comment[text]" placeholder="text" rows=7></textarea>
		</div>
		<!-- <div class="form-group">
			<input class="form-control" type="text" name="comment[author]" placeholder="author">
		</div> -->
		<div class="form-group">
			<button class="btn btn-md btn-primary btn-block">Submit!</button>	
		</div>
	</form>
	<a href="/campgrounds">Go Back</a>
</div>

<%- include("../partials/footer") %>