<% pageTitle = "Add New Campground" %>

<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align: center;">
		Create a New Campgrounds
	</h1>
	<form class="small-form" action="/campgrounds" method="post">
		<div class="form-group">
			<input class="form-control" type="text" name="name" placeholder="campground">
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name="price" placeholder="price per night" min="0.01" step="0.01">
		</div>
		<div class="form-group">
			<input class="form-control" type="url" name="image" placeholder="image url">
		</div>
		<div class="form-group">
			<textarea class="form-control" name="description" placeholder="description" rows=7></textarea>
		</div>
		<div class="form-group">
			<button class="btn btn-md btn-primary btn-block">Submit!</button>	
		</div>
	</form>
	<a href="/campgrounds">Go Back</a>
</div>

<%- include("../partials/footer") %>