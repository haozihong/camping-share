<% pageTitle = "Edit Campground" %>

<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align: center;">
		Editing Campground: <%= campground.name %>
	</h1>
	<form class="small-form" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="campground[name]" placeholder="campground" value="<%= campground.name %>">
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name="campground[price]" placeholder="price per night" value="<%= campground.price %>" min="0.01" step="0.01">
		</div>
		<div class="form-group">
			<input class="form-control" type="url" name="campground[image]" placeholder="image url" value="<%= campground.image %>">
		</div>
		<div class="form-group">
			<textarea class="form-control" name="campground[description]" placeholder="description" rows=7><%= campground.description %></textarea>
		</div>
		<div class="form-group">
			<button class="btn btn-md btn-primary btn-block">Submit!</button>	
		</div>
	</form>
	<a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

<%- include("../partials/footer") %>